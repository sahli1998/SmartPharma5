<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             x:Class="SmartPharma5.View.HomeView"
             xmlns:local="clr-namespace:SmartPharma5.ViewModel"
             BackgroundColor="BlueViolet"
             MenuItem.Accelerator="true"
             NavigationPage.HasBackButton="false"
             Shell.FlyoutBehavior="Flyout"
             NavigationPage.HasNavigationBar="true"
             Title="HomeView">
    
    

    <ContentPage.BindingContext>
        <local:HomeViewModel/>
    </ContentPage.BindingContext>

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <ImageButton   HorizontalOptions="StartAndExpand" Clicked="ImageButton_Clicked"  Source="Images/pichon_menu2.png"  WidthRequest="40" ></ImageButton>
            <Label Text="Menu" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Center" FontSize="19" TextColor="White" VerticalOptions="CenterAndExpand"></Label>
           

        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.MenuBarItems>
